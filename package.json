    "nodemon": "^2.0.2"
  },
  "nodemonConfig": {
    "watch": [
      "./src/views",
      "./dist"
    ],
    "ext": "html, js",
    "events": {
      "restart": "xcopy .\\src\\views\\*.html .\\dist\\views /Y /R /F /I /V /E"
