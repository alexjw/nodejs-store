{
  "name": "node-complete-guide",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "nodemon dist/app.js",
    "html": "copyfiles app/**/*.html app/**/*.css dist/",
    "copy-html": "xcopy .\\src\\views\\*.html .\\dist\\views /Y /R /F /I /V /E",
    "copy-pug": "xcopy .\\src\\views\\*.pug .\\dist\\views /Y /R /F /I /V /E"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "express-handlebars": "^4.0.0",
    "pug": "^2.0.4",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/ejs": "^3.0.1",
    "@types/express": "^4.17.3",
    "@types/express-handlebars": "^3.1.0",
    "@types/node": "^13.9.3",
    "@types/pug": "2.0.3",
    "copyfiles": "^2.2.0",
    "nodemon": "^2.0.2"
  },
  "nodemonConfig": {
    "watch": [ "./src", "./dist/src", "./dist/app.js" ],
    "ignore": [ "./dist/src/views" ],
    "ext": "html, css, js, ejs, ts",
    "events": {
      "restart": "xcopy .\\src\\views\\*.ejs .\\dist\\src\\views /Y /R /F /I /V /E"
    }
  }
}
